using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int a;
    bool bo;
    cout << "A = ";
    cin >> a;
    bo = ((((a % 10) > (a % 100 / 10)) & ((a % 100 /10) > (a / 100)) )| (((a % 10) < a % 100 / 10) & ((a % 100 / 10) < (a / 100))));
    cout << bo << endl;
    system("pause");
