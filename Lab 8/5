#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int A, B;
    cout << "Введите трехзначное число: ";
    cin >> A;
    B = A/100;
    A %= 100;
        cout << "Полученное число: " << A << B << endl;
    system("pause");
    return 0;
}
