#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    int k, N;
    cout << "K = ";
    cin >> k;
    cout << "N = ";
    cin >> N;
    k += (N - 1);
    k %= 7;
    if (k == 0)
        k = 7;
    cout << "Номер дня недели: " << k << endl;
    system("pause");
    return 0;
}
