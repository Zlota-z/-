#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    double a, b, c;
    cout << "a = ";
    cin >> a;
    cout << "b = ";
    cin >> b;
    cout << "c = ";
    cin >> c;
    if ((a > b) | (a > c))
    {
        if (b > c)
            a = a + b;
        else
            a = a + c;
    }
    else a = b + c;
    cout << "Сумма двух наибольших чисел равна " << a << endl;
    system("pause");
    return 0;
}
