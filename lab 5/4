#include <iostream>
#include <cmath>

using namespace std;
int main()
{
    double x1, x2, y1, y2;
    cout << "X1 = ";
    cin >> x1;
    cout << "Y1 = ";
    cin >> y1;
    cout << "Y2 = ";
    cin >> y2;
    cout << "X2 = ";
    cin >> x2;
    x1 = abs (x1 - x2);
    y1 = abs (y1 - y2);
    x2 = x1 * y1;
    y2 = 2 * (x1 + y1);
    cout << "S = " << x2 << endl;
    cout << "P = " << y2 << endl;
}
