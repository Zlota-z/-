
#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    double x1, x2, y1, y2;
    cout << "X1 = ";
    cin >> x1;
    cout << "Y1 = ";
    cin >> y1;
    cout << "Y2 = ";
    cin >> y2;
    cout << "X2 = ";
    cin >> x2;
    x1 = (x2 - x1)*(x2 - x1) + (y2 - y1)*(y2 - y1);
    x1 = sqrt (x1);
    cout << "Расстояние равно: " << x1 << endl;
   

}
