#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");
    double a, b, c;
    cout << "A = ";
    cin >> a;
    cout << "B = ";
    cin >> b;
    cout << "C = ";
    cin >> c;
    a = abs (c - a);
    b = abs (c - b);
    cout << "AC = " << a << endl;
    cout << "BC = " << b << endl;
    cout << "AC + BC = " << a + b << endl;
}
